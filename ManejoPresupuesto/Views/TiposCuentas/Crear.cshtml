@model TipoCuenta
@{

}
<h1>Crear tipo cuenta</h1>
<h5>El tipo de cuenta se refiere a como podemos agrupar las cuentas. Ejemplos: Prestamos, Tarjetas de credito etc.</h5>
<div class="text-danger">

</div>
<form asp-controller="TiposCuentas" asp-action="Crear">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control"/>
        <!--PARA QUE LA VALIDACION APAREZCA ABAJO DEL CAMPO-->
        <span asp-validation-for="Nombre" class="text-danger"></span>
        <br />
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>
</form>

<!--SCRIPT DE JQUERY PARA VALIDACIONES-->
@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}