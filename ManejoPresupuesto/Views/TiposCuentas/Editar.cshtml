@model TipoCuenta
@{

}

<h1>Editar Tipo Cuenta: @Model.Nombre</h1>

<form asp-controller="TiposCuentas" asp-action="Editar">

    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <!--PARA QUE LA VALIDACION APAREZCA ABAJO DEL CAMPO-->
        <span asp-validation-for="Nombre" class="text-danger"></span>
        <br />
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>
</form>

<!--SCRIPT DE JQUERY PARA VALIDACIONES-->
@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}